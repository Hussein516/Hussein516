<html lang="ar">
<head>
  <meta charset="UTF-8">
  <title>تخمين الرقم</title>
  <style>
    body {
      font-family: Tahoma, sans-serif;
      text-align: center;
      padding-top: 100px;
      background-color: #f0f0f0;
    }
    input, button {
      padding: 10px;
      font-size: 16px;
      margin: 10px;
    }
  </style>
</head>
<body>

  <h1>لعبة تخمين الرقم 🎲</h1>
  <p>أختر رقم من 1 إلى 10</p>

  <input type="number" id="guess" placeholder="اكتب رقمك">
  <button onclick="checkGuess()">جرب حظك</button>

  <p id="result"></p>

  <script>
    const number = Math.floor(Math.random() * 10) + 1;

    function checkGuess() {
      const guess = parseInt(document.getElementById('guess').value);
      const result = document.getElementById('result');

      if (guess === number) {
        result.textContent = '🎉 صحيح! انت عبقري!';
        result.style.color = 'green';
      } else {
        result.textContent = '❌ غلط! حاول مرة ثانية.';
        result.style.color = 'red';
      }
    }
  </script>

</body>
</html>
